<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gas.mapper.UserMapper">
    <resultMap id="userMap" type="com.gas.entity.Manager">
        <id column="id" property="managerId"></id>
        <result column="username" property="username"></result>
        <result column="password" property="password"></result>
        <result column="user_level" property="managerLevel"></result>
        <result column="account_status" property="accountStatus"></result>
    </resultMap>
    <insert id="addManagerUser">
        insert into manager(m_username,password,manager_level) values(#{manager.username},#{manager.password},1);
    </insert>
    <select id="queryUsername" resultMap="userMap">
        select * from `manager` where m_username=#{username};
    </select>
</mapper>